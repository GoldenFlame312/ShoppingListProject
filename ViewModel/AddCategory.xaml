<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingListProject.Views.AddCategory">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="20">
           
            <Label Text="Dodawanie kategorii"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333"
                   Margin="0,10,10,10"/>

            
            <Frame BackgroundColor="White"
                   BorderColor="#DDD"
                   CornerRadius="10"
                   Padding="10"
                   HasShadow="True">
                <Entry x:Name="CategoryName"
                       Placeholder="Nazwa Kategorii"
                       BackgroundColor="White"
                       FontSize="16"/>
            </Frame>

          
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="PowrÃ³t"
                        Clicked="OnGoToMenuClicked"
                        Padding="15,10"
                        BackgroundColor="#FF9800"
                        TextColor="White"
                        CornerRadius="10"
                        WidthRequest="150"/>
                <Button Text="Dodaj"
                        Clicked="OnAddCategoryClicked"
                        Padding="15,10"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="10"
                        WidthRequest="150"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
